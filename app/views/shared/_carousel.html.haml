%div#carouselCaptions.carousel.slide{ data: { ride: "carousel" } }
  %ol.carousel-indicators
    %li{ data: { target: "#carouselCaptions", slide: { to: 0 } } }.active
    %li{ data: { target: "#carouselCaptions", slide: { to: 1 } } }
    %li{ data: { target: "#carouselCaptions", slide: { to: 2 } } }
  %div.carousel-inner
    %div.carousel-item.active
      = image_tag("header_image1.jpg", class: "d-block w-100")
      %div.carousel-caption.d-none.d-md-block
        %h5 First slide label
        %p Nulla vitae elit libero, a pharetra augue mollis interdum.
    %div.carousel-item
      = image_tag("header_image2.jpg", class: "d-block w-100" )
      %div.carousel-caption.d-none.d-md-block
        %h5 Second slide label
        %p Nulla vitae elit libero, a pharetra augue mollis interdum.
    %div.carousel-item
      = image_tag("header_image3.png", class: "d-block w-100" )
      %div.carousel-caption.d-none.d-md-block
        %h5 Third slide label
        %p Nulla vitae elit libero, a pharetra augue mollis interdum.
    %a.carousel-control-prev{ href: "#carouselCaptions", role: "button", data: { slide: "prev" } }
      %span.carousel-control-prev-icon{ aria: { hidden: true } }
      %span.sr-only Previous
    %a.carousel-control-next{ href: "#carouselCaptions", role: "button", data: { slide: "next" } }
      %span.carousel-control-next-icon{ aria: { hidden: true } }
      %span.sr-only Next
